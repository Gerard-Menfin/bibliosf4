{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ livre.auteur }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted("ROLE_ADMIN") %}
        <a href="{{ path('livre_index') }}">Retour à la liste</a>

        <a href="{{ path('livre_edit', {'id': livre.id}) }}">Modifier</a>

        {{ include('livre/_delete_form.html.twig') }}
    {% else %}
        <a href="{{ path('accueil') }}">
            <i class="fa fa-home"></i>
            Retour à l'accueil
        </a>
    {% endif %}
{% endblock %}
